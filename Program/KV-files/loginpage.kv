<LoginWidget>:
    MDBoxLayout:
        md_bg_color:'gray'
    MDCard:
        size_hint:None,None
        size:400,500
        pos_hint:{'center_x':0.5,'center_y':0.5}
        padding:25
        spacing:25
        orientation:'vertical'
        md_bg_color: 'white'
    MDTextField:
        id:login_username
        hint_text:'Username'
        text:'Sthofy'
        pos_hint:{'center_x':0.5,'center_y':0.75}
        size_hint_x:None
        icon_right:'account-box'
        width:300
    MDTextField:
        id:login_password
        hint_text:'Password'
        text:'Pwd12345.'
        password:True
        pos_hint:{'center_x':0.5,'center_y':0.65}
        size_hint_x:None
        icon_right:'form-textbox-password'
        width:300
    MDIconButton:
        icon:"login-variant"
        icon_size:'58sp'
        md_bg_color: 'lightblue'
        pos_hint:{'center_x':0.5,'center_y':0.45}
        on_press:root.login()
    MDTextButton:
        text:'Create an account'
        pos_hint:{'center_x':0.5,'center_y':0.35}
        theme_text_color: 'Custom'
        text_color:'orange'
        on_press:app.change_screen('register')