<LoginWidget>:
    GridLayout:
        cols:3
        BoxLayout
            canvas:
                Color:
                    rgb:0.07,0.48,0.54
                Rectangle:
                    size:self.size
                    pos:self.pos
            size_hint_x:0.5
        BoxLayout:
            orientation:"vertical"
            padding:[0,200,0,200]
            canvas:
                Color:
                    rgb:0.11,0.24,0.30
                Rectangle:
                    size:self.size
                    pos:self.pos
            Label:
                text:"Username:"
                color:0,0,0,1
            TextInput:
                id:username
                multiline:False
                text:'admin@gmail.com'
                focus:True
                halign:'center'
            Label:
                text:"Password:"
                color:0,0,0,1
            TextInput:
                id:password
                password:True
                multiline:False
                halign:'center'
                text:'Pwd12345.'
            GridLayout:
                cols:3
                padding:[0,15,0,0]
                BoxLayout:
                    size_hint_x:0.5
                Button:
                    text:"Log In"
                    size_hint_x:0.5
                BoxLayout:
                    size_hint_x:0.5
        BoxLayout:
            canvas:
                Color:
                    rgb:0.07,0.48,0.54
                Rectangle:
                    size:self.size
                    pos:self.pos
            size_hint_x:0.5